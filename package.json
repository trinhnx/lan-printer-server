{
  "name": "printer-server-monorepo",
  "version": "1.0.0",
  "description": "LAN Printer Server with NestJS backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter @printer-server/backend dev",
    "dev:frontend": "pnpm --filter @printer-server/frontend dev",
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @printer-server/backend build",
    "build:frontend": "pnpm --filter @printer-server/frontend build",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:backend": "pnpm --filter @printer-server/backend start:prod",
    "start:frontend": "pnpm --filter @printer-server/frontend start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "test": "pnpm -r test",
    "install:all": "pnpm install",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "prettier": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
